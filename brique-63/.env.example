# Server
NODE_ENV=development
PORT=8063

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/molam

# External APIs
SIRA_API_URL=http://localhost:8061
WALLET_API_URL=http://localhost:8050
CONNECT_API_URL=http://localhost:8055
TREASURY_API_URL=http://localhost:8051
WEBHOOKS_API_URL=http://localhost:8045

# Kafka
KAFKA_BROKERS=localhost:9092
KAFKA_GROUP_ID=action-executor

# Action Center Configuration
AUTO_REFUND_THRESHOLD=100.00           # Auto-approve refunds below this amount
BIG_LIMIT_THRESHOLD=10000.00           # Require 2+ approvals above this
IDEMPOTENCY_EXPIRY_HOURS=1             # Idempotency key validity

# Approval SLA
APPROVAL_SLA_HOURS=24                  # Escalate if not approved within
ESCALATION_ROLE=head_finance

# Molam ID
MOLAM_ID_URL=http://localhost:8040
