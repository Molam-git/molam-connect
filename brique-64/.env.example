# Server
NODE_ENV=development
PORT=8064

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/molam

# External APIs
TREASURY_API_URL=http://localhost:8051
SIRA_API_URL=http://localhost:8061
WEBHOOKS_API_URL=http://localhost:8045

# Kafka
KAFKA_BROKERS=localhost:9092
KAFKA_GROUP_ID=split-settler

# Split Payment Configuration
SETTLEMENT_DELAY_DAYS=3                # Days to wait before settling splits
MAX_SPLIT_RECIPIENTS=10                # Maximum number of recipients per payment
PLATFORM_FEE_MAX_PERCENT=30            # Maximum platform fee percentage (fraud detection)

# SIRA Integration
SIRA_SPLIT_SCORING_ENABLED=true
SIRA_ANOMALY_THRESHOLD=80              # Flag splits with risk score > threshold
