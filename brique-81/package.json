{
  "name": "@molam/brique-81-billing-overages",
  "version": "1.0.0",
  "description": "Dynamic billing for rate limit overages with multi-currency pricing and SIRA integration",
  "main": "src/index.ts",
  "scripts": {
    "start": "node dist/server.js",
    "start:consumer": "node dist/overages/consumer.js",
    "start:trends": "node dist/sira/hook.js trends",
    "start:recommendations": "node dist/sira/hook.js recommendations",
    "build": "tsc",
    "dev": "ts-node src/server.ts",
    "dev:consumer": "ts-node src/overages/consumer.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\" \"__tests__/**/*.ts\"",
    "db:migrate": "psql -U postgres -d molam_connect -f sql/010_billing_overages_schema.sql",
    "db:seed": "psql -U postgres -d molam_connect -c \"SELECT 'Seed data already included in schema';\""
  },
  "keywords": [
    "billing",
    "overages",
    "rate-limiting",
    "kafka",
    "multi-currency",
    "pricing",
    "sira",
    "analytics"
  ],
  "author": "Molam Platform Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "kafkajs": "^2.2.4",
    "ioredis": "^5.3.2",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "prom-client": "^15.1.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.10.9",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/morgan": "^1.9.9",
    "@types/jest": "^29.5.11",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 85,
        "lines": 90,
        "statements": 90
      }
    }
  }
}
