    "@types/pg": "^8.10.0",
    "@types/mustache": "^4.2.2",
    "@types/nodemailer": "^6.4.7",
    "@types/jest": "^29.5.2",
    "jest": "^29.5.0",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.12",
    "ts-jest": "^29.1.0",
