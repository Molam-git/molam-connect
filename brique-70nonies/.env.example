# Brique 70nonies - Refund Engine Configuration

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=molam_connect
DB_USER=postgres
DB_PASSWORD=your_secure_password

# Server
PORT=3078
NODE_ENV=development

# AWS S3 (Evidence Storage)
AWS_REGION=us-east-1
AWS_S3_BUCKET=molam-refund-evidence
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key

# KMS/Encryption
AWS_KMS_KEY_ID=your_kms_key_id

# Molam ID (Authentication)
MOLAM_ID_URL=https://id.molam.com
MOLAM_ID_CLIENT_ID=your_client_id
MOLAM_ID_CLIENT_SECRET=your_client_secret

# Integration Services
LEDGER_SERVICE_URL=http://localhost:3033
TREASURY_SERVICE_URL=http://localhost:3034
WALLET_SERVICE_URL=http://localhost:3039
WEBHOOK_SERVICE_URL=http://localhost:3045

# SIRA ML
SIRA_MODEL_VERSION=sira-refund-v1.0-industrial
SIRA_API_URL=http://localhost:8080/sira

# Prometheus
PROMETHEUS_PORT=9090

# Feature Flags
ENABLE_AUTO_REFUNDS=true
ENABLE_MULTI_SIG=true
ENABLE_EVIDENCE_UPLOAD=true

# Rate Limits
MAX_REFUNDS_PER_USER_PER_DAY=5
MAX_REFUNDS_PER_USER_PER_WEEK=20
MAX_REFUNDS_PER_USER_PER_MONTH=50

# File Upload Limits
MAX_FILE_SIZE_MB=10
MAX_FILES_PER_REFUND=10
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf,text/plain

# SLA Targets
AUTO_DECISION_LATENCY_TARGET_MS=200
MANUAL_REVIEW_SLA_HOURS=24
REFUND_EXECUTION_TARGET_SECONDS=2
