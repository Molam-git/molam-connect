# Server Configuration
PORT=4068
NODE_ENV=development

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=molam_rbac
DB_USER=postgres
DB_PASSWORD=postgres
DB_POOL_MAX=20

# Redis (Permission Cache)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Performance
CACHE_TTL_PERMISSIONS=30
CACHE_TTL_ROLES=60

# Security
JWT_SECRET=your-secret-key-here
JWT_ISSUER=molam-connect

# Observability
LOG_LEVEL=info
METRICS_ENABLED=true

# OPA (Optional - for ext_authz)
OPA_URL=http://localhost:8181
OPA_POLICY_PATH=molam/rbac/authz/allow