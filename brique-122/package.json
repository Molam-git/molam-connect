{
  "name": "@molam/brique-122-reconciliation",
  "version": "1.0.0",
  "description": "Industrial-grade statement ingestion and reconciliation worker for Molam Connect",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "worker:start": "node dist/workers/reconciliation-worker.js",
    "worker:dev": "ts-node src/workers/reconciliation-worker.ts",
    "db:setup": "psql $DATABASE_URL -f database/schema.sql",
    "db:migrate": "node scripts/migrate.js",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "reconciliation",
    "bank-statements",
    "matching",
    "treasury",
    "fintech",
    "anomaly-detection",
    "sira",
    "webhooks"
  ],
  "author": "Molam Financial Technology",
  "license": "PROPRIETARY",
  "dependencies": {
    "pg": "^8.11.3",
    "ioredis": "^5.3.2",
    "natural": "^6.8.0",
    "fast-levenshtein": "^3.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "@types/jest": "^29.5.11",
    "typescript": "^5.3.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
