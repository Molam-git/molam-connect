# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=molam_connect
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_POOL_MAX=20

# Server Configuration
PORT=3000
NODE_ENV=development

# SIRA Service
SIRA_API_URL=http://localhost:9000
SIRA_API_KEY=your_sira_key_here
SIRA_TIMEOUT_MS=10000

# Scheduler Configuration
AUTO_APPROVE_THRESHOLD=10000
SCHEDULER_POLL_MS=60000
MAX_PLAN_SIZE=1000

# Authentication
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=24h

# Monitoring
PROMETHEUS_PORT=9090

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
