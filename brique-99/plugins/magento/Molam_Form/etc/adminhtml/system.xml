<?xml version="1.0"?>
<!--
/**
 * Molam Form - Admin System Configuration
 *
 * Merchant-facing configuration for Molam payments
 *
 * @category  Molam
 * @package   Molam_Form
 */
-->
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="payment">
            <group id="molam" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Molam Form</label>
                <comment><![CDATA[Accept Molam Wallet and Connect payments. <a href="https://docs.molam.com" target="_blank">Documentation</a>]]></comment>
                <field id="active" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <config_path>payment/molam/active</config_path>
                </field>
                <field id="title" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Title</label>
                    <config_path>payment/molam/title</config_path>
                    <validate>required-entry</validate>
                </field>
                <field id="mode" translate="label comment" type="select" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Mode</label>
                    <source_model>Molam\Form\Model\Config\Source\Mode</source_model>
                    <config_path>payment/molam/mode</config_path>
                    <comment>Switch to Live only after KYC verification is complete</comment>
                </field>
                <field id="api_base_url" translate="label comment" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>API Base URL</label>
                    <config_path>payment/molam/api_base_url</config_path>
                    <comment>Default: https://api.molam.com</comment>
                </field>
                <field id="public_key" translate="label comment" type="text" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Public Key (Publishable)</label>
                    <config_path>payment/molam/public_key</config_path>
                    <comment>Get from Molam Dashboard</comment>
                    <validate>required-entry</validate>
                </field>
                <field id="private_key" translate="label comment" type="obscure" sortOrder="60" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Private Key (Secret)</label>
                    <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                    <config_path>payment/molam/private_key</config_path>
                    <comment>Stored encrypted. Never share this key.</comment>
                    <validate>required-entry</validate>
                </field>
                <field id="webhook_secret" translate="label comment" type="obscure" sortOrder="70" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Webhook Secret</label>
                    <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                    <config_path>payment/molam/webhook_secret</config_path>
                    <comment>Copy once from Molam Dashboard. Used to verify webhook signatures.</comment>
                    <validate>required-entry</validate>
                </field>
                <field id="payment_methods" translate="label comment" type="multiselect" sortOrder="80" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Enabled Payment Methods</label>
                    <source_model>Molam\Form\Model\Config\Source\PaymentMethods</source_model>
                    <config_path>payment/molam/payment_methods</config_path>
                    <can_be_empty>0</can_be_empty>
                    <comment>Select which Molam payment methods to offer at checkout</comment>
                </field>
                <field id="order_status" translate="label" type="select" sortOrder="90" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>New Order Status</label>
                    <source_model>Magento\Sales\Model\Config\Source\Order\Status\Newprocessing</source_model>
                    <config_path>payment/molam/order_status</config_path>
                </field>
                <field id="payment_action" translate="label" type="select" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Payment Action</label>
                    <source_model>Molam\Form\Model\Config\Source\PaymentAction</source_model>
                    <config_path>payment/molam/payment_action</config_path>
                </field>
                <field id="allowspecific" translate="label" type="allowspecific" sortOrder="110" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Payment from Applicable Countries</label>
                    <source_model>Magento\Payment\Model\Config\Source\Allspecificcountries</source_model>
                    <config_path>payment/molam/allowspecific</config_path>
                </field>
                <field id="specificcountry" translate="label" type="multiselect" sortOrder="120" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Payment from Specific Countries</label>
                    <source_model>Magento\Directory\Model\Config\Source\Country</source_model>
                    <config_path>payment/molam/specificcountry</config_path>
                    <can_be_empty>1</can_be_empty>
                    <depends>
                        <field id="allowspecific">1</field>
                    </depends>
                </field>
                <field id="min_order_total" translate="label" type="text" sortOrder="130" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Minimum Order Total</label>
                    <config_path>payment/molam/min_order_total</config_path>
                    <validate>validate-number validate-zero-or-greater</validate>
                </field>
                <field id="max_order_total" translate="label" type="text" sortOrder="140" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Maximum Order Total</label>
                    <config_path>payment/molam/max_order_total</config_path>
                    <validate>validate-number validate-zero-or-greater</validate>
                </field>
                <field id="sort_order" translate="label" type="text" sortOrder="150" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Sort Order</label>
                    <frontend_class>validate-number</frontend_class>
                    <config_path>payment/molam/sort_order</config_path>
                </field>

                <!-- Advanced Settings -->
                <group id="advanced" translate="label" type="text" sortOrder="200" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Advanced Settings</label>
                    <field id="debug" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="0">
                        <label>Debug Mode</label>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                        <config_path>payment/molam/debug</config_path>
                        <comment>Log all API requests and responses for troubleshooting</comment>
                    </field>
                    <field id="webhook_retry_attempts" translate="label comment" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="0">
                        <label>Webhook Retry Attempts</label>
                        <config_path>payment/molam/webhook_retry_attempts</config_path>
                        <validate>validate-number validate-zero-or-greater</validate>
                        <comment>Number of times to retry failed webhook processing (default: 3)</comment>
                    </field>
                    <field id="webhook_retry_delays" translate="label comment" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="0">
                        <label>Webhook Retry Delays (seconds)</label>
                        <config_path>payment/molam/webhook_retry_delays</config_path>
                        <comment>Comma-separated delay values in seconds (e.g., 60,300,900 for 1min, 5min, 15min)</comment>
                    </field>
                    <field id="timeout" translate="label comment" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="0">
                        <label>API Timeout (seconds)</label>
                        <config_path>payment/molam/timeout</config_path>
                        <validate>validate-number validate-greater-than-zero</validate>
                        <comment>Maximum time to wait for API response (default: 30)</comment>
                    </field>
                </group>
            </group>
        </section>
    </system>
</config>
