{
  "name": "@molam/brique-86-reconciliation",
  "version": "1.0.0",
  "description": "Bank statement ingestion and reconciliation worker",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node src/server.ts",
    "worker:ingest": "ts-node src/workers/statement-consumer.ts",
    "test": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "jest tests/e2e",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "migrate": "psql -d ${DB_NAME} -f migrations/001_b86_statement_reconciliation.sql"
  },
  "keywords": [
    "reconciliation",
    "banking",
    "mt940",
    "camt",
    "payment"
  ],
  "author": "Molam Engineering",
  "license": "PROPRIETARY",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.450.0",
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "prom-client": "^15.0.0",
    "xml2js": "^0.6.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "@types/xml2js": "^0.4.14",
    "@types/jest": "^29.5.10",
    "@types/cors": "^2.8.17",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
