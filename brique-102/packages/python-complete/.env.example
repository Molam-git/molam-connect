# Molam SDK Environment Variables
# Copy to .env and fill in your values
# NEVER commit .env to version control

# Molam API Configuration
MOLAM_API_KEY=sk_test_your_test_key_here
MOLAM_BASE_URL=https://sandbox.api.molam.io

# Webhook Configuration
MOLAM_WEBHOOK_SECRET_V1=whsec_your_webhook_secret_here
MOLAM_WEBHOOK_SECRET_V2=whsec_new_webhook_secret_for_rotation

# mTLS Configuration (for production/sensitive endpoints)
# MOLAM_MTLS_CERT=/path/to/client-cert.pem
# MOLAM_MTLS_KEY=/path/to/client-key.pem

# Logging
# DEBUG=true
