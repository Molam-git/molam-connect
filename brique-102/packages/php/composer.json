{
  "name": "molam/sdk-php",
  "description": "Molam PHP SDK - Official server-side SDK for Molam payments",
  "version": "2.0.0",
  "type": "library",
  "keywords": [
    "molam",
    "payment",
    "payments",
    "api",
    "sdk"
  ],
  "license": "UNLICENSED",
  "authors": [
    {
      "name": "Molam Labs",
      "email": "dev@molam.co"
    }
  ],
  "require": {
    "php": ">=7.4",
    "ext-json": "*",
    "ext-curl": "*",
    "guzzlehttp/guzzle": "^7.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "phpstan/phpstan": "^1.10"
  },
  "autoload": {
    "psr-4": {
      "Molam\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Molam\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "phpstan": "phpstan analyse src --level=7"
  }
}
