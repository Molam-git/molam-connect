{
  "name": "@molam/brique-140-devportal",
  "version": "1.0.0",
  "description": "Molam Connect - Brique 140: Developer Portal (API Keys, Usage, Playground)",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:load": "k6 run loadtest/k6_script.js",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "migrate": "node -r ts-node/register scripts/migrate.ts",
    "consumer:usage": "ts-node src/consumers/usage-ingest.ts"
  },
  "keywords": [
    "developer-portal",
    "api-keys",
    "rate-limiting",
    "usage-tracking",
    "molam",
    "stripe-inspired"
  ],
  "author": "Molam Pay",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "ioredis": "^5.3.2",
    "kafkajs": "^2.2.4",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "express-rate-limit": "^7.1.5",
    "dotenv": "^16.3.1",
    "uuid": "^9.0.1",
    "shortid": "^2.2.16",
    "jsonwebtoken": "^9.0.2",
    "node-fetch": "^2.7.0",
    "prom-client": "^15.1.0",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/express": "^4.17.21",
    "@types/pg": "^8.10.9",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/morgan": "^1.9.9",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node-fetch": "^2.6.9",
    "@types/jest": "^29.5.10",
    "@types/shortid": "^0.0.32",
    "typescript": "^5.3.2",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "prettier": "^3.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
