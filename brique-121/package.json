{
  "name": "@molam/brique-121-bank-connectors",
  "version": "1.0.0",
  "description": "Industrial-grade bank connectors for Molam Connect - REST, MT940, ISO20022",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "db:setup": "psql $DATABASE_URL -f database/schema.sql",
    "db:drop": "psql $DATABASE_URL -c 'DROP SCHEMA public CASCADE; CREATE SCHEMA public;'",
    "db:reset": "npm run db:drop && npm run db:setup",
    "vault:dev": "vault server -dev",
    "vault:setup": "bash scripts/vault-setup.sh"
  },
  "keywords": [
    "bank",
    "connector",
    "mt940",
    "iso20022",
    "swift",
    "fintech",
    "payments",
    "treasury",
    "reconciliation"
  ],
  "author": "Molam Financial Technology",
  "license": "PROPRIETARY",
  "dependencies": {
    "pg": "^8.11.3",
    "ssh2-sftp-client": "^10.0.3",
    "xml-crypto": "^5.0.0",
    "xmlbuilder": "^15.1.1",
    "ioredis": "^5.3.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "@types/jest": "^29.5.11",
    "typescript": "^5.3.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "eslint": "^8.56.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "prettier": "^3.1.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
