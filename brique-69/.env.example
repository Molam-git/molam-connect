# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/molam_analytics
DB_POOL_MAX=10

# Kafka
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=analytics-consumer
KAFKA_GROUP_ID=analytics-consumer-g
KAFKA_TOPIC_TRANSACTIONS=wallet_txn_created
KAFKA_TOPIC_ANOMALIES=analytics.anomaly

# Redis
REDIS_URL=redis://localhost:6379
REDIS_CACHE_TTL=120

# Server
PORT=8082
NODE_ENV=development

# JWT / Auth
JWT_SECRET=your-jwt-secret-here
MOLAM_ID_PUBLIC_KEY_URL=https://id.molam.io/.well-known/jwks.json

# SIRA Integration
SIRA_ENABLED=true
SIRA_API_URL=http://localhost:8083

# Observability
METRICS_ENABLED=true
PROMETHEUS_PORT=9090

# Analytics Config
ANALYTICS_INGEST_BATCH_SIZE=100
ANALYTICS_ALERT_CHECK_INTERVAL=60000
ANALYTICS_MV_REFRESH_INTERVAL=300000
