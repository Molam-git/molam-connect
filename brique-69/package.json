    "jsonwebtoken": "^9.0.2",
    "zod": "^3.22.4",
    "prom-client": "^15.1.0",
    "date-fns": "^3.3.1",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "dotenv": "^16.4.1",
    "csv-writer": "^1.6.0",
    "exceljs": "^4.4.0",
    "pdfkit": "^0.14.0",
    "@aws-sdk/client-s3": "^3.490.0",
    "@aws-sdk/s3-request-presigner": "^3.490.0",
