# Database
DATABASE_URL=postgresql://user:password@localhost:5432/molam_limits
DB_POOL_MAX=20

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_CACHE_TTL_SECONDS=30

# Server
PORT=3072
NODE_ENV=development

# SIRA ML Service
SIRA_API_URL=http://localhost:5000
SIRA_API_KEY=your-sira-api-key

# Molam ID (JWT verification)
MOLAM_ID_PUBLIC_KEY_URL=https://id.molam.com/.well-known/jwks.json

# Metrics
METRICS_PORT=9072

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:3072
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Features
ENABLE_SIRA_RECOMMENDATIONS=true
ENABLE_AUTO_LIMIT_ADJUSTMENTS=false
