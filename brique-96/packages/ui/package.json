{
  "name": "@molam/ui",
  "version": "0.1.0",
  "description": "Molam inline UI components for checkout and payment integration",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "styles"
  ],
  "exports": {
    ".": {
      "require": "./dist/index.cjs.js",
      "import": "./dist/index.esm.js",
      "types": "./dist/index.d.ts"
    },
    "./styles": "./styles/index.css",
    "./tokens": "./styles/tokens.css"
  },
  "scripts": {
    "build": "npm run build:types && npm run build:js && npm run build:css",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "rollup -c rollup.config.js",
    "build:css": "postcss styles/index.css -o dist/styles.css",
    "dev": "rollup -c -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:a11y": "jest --testMatch='**/*.a11y.test.tsx'",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "prepublishOnly": "npm run build && npm test"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-react": "^7.23.0",
    "@babel/preset-typescript": "^7.23.0",
    "@rollup/plugin-babel": "^6.0.0",
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "@storybook/addon-a11y": "^7.5.0",
    "@storybook/addon-essentials": "^7.5.0",
    "@storybook/react": "^7.5.0",
    "@storybook/react-vite": "^7.5.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^14.1.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/jest": "^29.5.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "axe-core": "^4.8.0",
    "eslint": "^8.50.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "jest-axe": "^8.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.0",
    "postcss-cli": "^10.1.0",
    "rollup": "^4.0.0",
    "rollup-plugin-postcss": "^4.0.0",
    "storybook": "^7.5.0",
    "typescript": "^5.2.0"
  },
  "dependencies": {
    "clsx": "^2.0.0"
  },
  "keywords": [
    "molam",
    "payment",
    "checkout",
    "ui",
    "react",
    "components",
    "accessibility",
    "a11y"
  ],
  "author": "Molam Platform Team",
  "license": "PROPRIETARY",
  "repository": {
    "type": "git",
    "url": "https://github.com/molam/molam-connect.git",
    "directory": "brique-96/packages/ui"
  },
  "publishConfig": {
    "access": "restricted",
    "registry": "https://npm.molam.com"
  }
}
