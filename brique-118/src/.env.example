# Brique 118ter - Metrics Server Environment Variables

# Server Configuration
PORT=3000
NODE_ENV=production

# Prometheus Configuration
PROMETHEUS_PREFIX=molam_playground_
PROMETHEUS_DEFAULT_METRICS=true
PROMETHEUS_COLLECT_INTERVAL=5000

# Memory Update Interval (milliseconds)
MEMORY_UPDATE_INTERVAL=30000

# CORS Configuration
CORS_ORIGIN=*
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Rate Limiting (optionnel)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Database (optionnel - pour DB connections gauge)
DATABASE_URL=postgresql://postgres:password@localhost:5432/molam_connect
DB_POOL_MIN=2
DB_POOL_MAX=10

# Feature Flags
ENABLE_REQUEST_TIMING=true
ENABLE_PAYLOAD_SIZE_TRACKING=true
ENABLE_AUTO_MEMORY_UPDATES=true
