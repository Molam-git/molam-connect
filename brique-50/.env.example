# Brique 50 - Fiscal Reporting & Submission
# Environment Configuration

# Server
NODE_ENV=development
PORT=8050

# Database
DATABASE_URL=postgresql://molam:molam@localhost:5432/molam_fiscal

# JWT Authentication (RS256)
JWT_PUBLIC_KEY=molam-public-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# S3 Storage (WORM compliance)
USE_LOCAL_STORAGE=true
LOCAL_STORAGE_PATH=./storage/fiscal
S3_BUCKET_FISCAL=molam-fiscal-reports-prod
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Vault Integration
USE_LOCAL_SECRETS=true
VAULT_ADDR=http://vault:8200
VAULT_TOKEN=

# HSM Integration
USE_HSM=false
HSM_ENDPOINT=http://hsm:8080
HSM_TOKEN=
HSM_KEY_ID=fiscal-signing-key

# SIRA Integration
SIRA_ENABLED=false
SIRA_API_URL=http://localhost:8044

# Worker Configuration
WORKER_ID=submission-worker-1
SUBMISSION_BATCH_SIZE=50
SUBMISSION_INTERVAL_MS=60000

# Authority Credentials (stored in Vault in production)
VAULT_FISCAL_SN_DGI_USER=
VAULT_FISCAL_SN_DGI_PASS=
VAULT_FISCAL_SN_DGI_TOKEN=
VAULT_FISCAL_FR_DGFIP_USER=
VAULT_FISCAL_FR_DGFIP_PASS=
VAULT_FISCAL_FR_DGFIP_TOKEN=
VAULT_FISCAL_US_IRS_USER=
VAULT_FISCAL_US_IRS_PASS=
VAULT_FISCAL_GB_HMRC_USER=
VAULT_FISCAL_GB_HMRC_PASS=
VAULT_FISCAL_GB_HMRC_TOKEN=
