{
    "compilerOptions": {
        "jsx": "react",
        "target": "ES2020",
        "module": "commonjs",
        "lib": [
            "ES2020",
            "DOM"
        ],
        "outDir": "./dist",
        "rootDir": "./",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@services/*": [
                "services/*"
            ],
            "@api/*": [
                "api/*"
            ],
            "@utils/*": [
                "api/utils/*"
            ]
        }
    },
    "include": [
        "services/**/*",
        "api/**/*",
        "web/src/**/*"
    ]
}