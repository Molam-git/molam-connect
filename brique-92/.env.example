# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=molam_connect
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_POOL_MAX=20

# Server Configuration
PORT=3000
NODE_ENV=development

# Ledger Service
LEDGER_API_URL=http://localhost:8080
LEDGER_TIMEOUT_MS=5000
LEDGER_MTLS_ENABLED=false
LEDGER_CLIENT_CERT_PATH=./certs/client.crt
LEDGER_CLIENT_KEY_PATH=./certs/client.key
LEDGER_CA_CERT_PATH=./certs/ca.crt

# Worker Configuration
PAYOUT_POLL_MS=5000
PAYOUT_BATCH_SIZE=50
PAYOUT_MAX_ATTEMPTS=5

# SIRA Routing Service
SIRA_API_URL=http://localhost:9000
SIRA_API_KEY=your_sira_key_here

# Authentication
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=24h

# Monitoring
PROMETHEUS_PORT=9090

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
