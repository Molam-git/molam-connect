# =====================================================================
# Brique 97 â€” Environment Variables
# =====================================================================

# Node Environment
NODE_ENV=development

# Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=molam_tokenization
POSTGRES_USER=molam
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_POOL_MAX=20

# Redis (for rate limiting)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_RATE_LIMIT_DB=1

# JWT Authentication
JWT_SECRET=your_jwt_secret_here_change_in_production

# AWS KMS (for encryption)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
KMS_KEY_ID=alias/molam-tokenization

# Use real KMS in production
USE_REAL_KMS=false

# Mock KMS password (development only)
MOCK_KMS_PASSWORD=dev-only-insecure-key

# Vault Provider ('mock', 'stripe', 'adyen', 'hsm')
VAULT_PROVIDER=mock

# Stripe (if using Stripe as vault)
STRIPE_SECRET_KEY=sk_test_...

# Hosted Server
HOSTED_PORT=3001
ALLOWED_ORIGINS=https://merchant1.example.com,https://merchant2.example.com
ALLOWED_PARENT_ORIGINS=https://merchant1.example.com,https://merchant2.example.com

# Token Lifecycle
TOKEN_RETENTION_MONTHS=24
CLIENT_TOKEN_CLEANUP_HOURS=24

# Feature Flags
ENABLE_HOSTED_TOKENIZATION=true

# HTTPS Enforcement (production only)
ENFORCE_HTTPS=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
