# Molam Ma Wallet Environment Variables
# Copy this file to .env and update with your values

# Server Configuration
NODE_ENV=development
PORT=8080
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:19006

# Database
DATABASE_URL=postgres://molam:changeme@localhost:5432/molam_wallet

# RabbitMQ
RABBITMQ_URL=amqp://molam:changeme@localhost:5672

# Molam ID JWT Public Key (RS256)
# Replace with actual public key in PEM format
MOLAM_ID_JWT_PUBLIC="-----BEGIN PUBLIC KEY-----
REPLACE_WITH_ACTUAL_PUBLIC_KEY
-----END PUBLIC KEY-----"

# Optional: Logging
LOG_LEVEL=info

# Optional: Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
