# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=molam_connect
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_POOL_MAX=20

# Server Configuration
PORT=3088
NODE_ENV=development

# Worker Configuration
ADJUSTMENT_POLL_INTERVAL_MS=5000
COMPENSATION_POLL_INTERVAL_MS=5000
COMPENSATION_BATCH_SIZE=50

# Approval Thresholds (JSON)
# Format: {"USD": 1000, "EUR": 900, "GBP": 800, "XOF": 500000}
OPS_AUTO_THRESHOLD={"USD":1000,"EUR":900,"GBP":800,"XOF":500000}

# Approval Quorum (number of approvers required)
APPROVAL_QUORUM=2

# Max Auto Amount Per Day (JSON)
MAX_AUTO_AMOUNT_PER_DAY={"USD":50000,"EUR":45000}

# External Service URLs (for future integration)
WALLET_SERVICE_URL=http://localhost:3020
BILLING_SERVICE_URL=http://localhost:3021
PAYMENT_SERVICE_URL=http://localhost:3022

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=9088
