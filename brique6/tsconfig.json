{
    "compilerOptions": {
        "types": [
            "jest",
            "node"
        ],
        "esModuleInterop": true,
        "target": "ES2020",
        "module": "CommonJS",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*",
        "src/tests/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}