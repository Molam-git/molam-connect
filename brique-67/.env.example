# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=molam_connect
DB_USER=postgres
DB_PASSWORD=your_password

# Server Configuration
PORT=4067
NODE_ENV=development

# Integration APIs
BILLING_API_URL=http://localhost:4046/api
TREASURY_API_URL=http://localhost:4034/api
WALLET_API_URL=http://localhost:4057/api

# Worker Configuration
WORKER_ENABLED=true
WORKER_BILLING_INTERVAL_MS=300000
WORKER_DUNNING_INTERVAL_MS=900000

# Payment Gateway (Optional)
STRIPE_API_KEY=sk_test_your_stripe_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Dunning Configuration
DUNNING_MAX_ATTEMPTS=4
DUNNING_RETRY_SCHEDULE=[3600,21600,86400,259200]

# Notifications (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_email_password
NOTIFICATION_FROM=subscriptions@molam.com

# Webhook Configuration
WEBHOOK_QUEUE_URL=redis://localhost:6379
WEBHOOK_RETRY_MAX=3

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Multi-Currency
DEFAULT_CURRENCY=USD
FX_PROVIDER_API_KEY=your_fx_api_key

# SIRA Integration
SIRA_API_URL=http://localhost:4050/api
SIRA_ENABLED=true

# Security
JWT_SECRET=your_jwt_secret
ENCRYPT_PAYMENT_TOKENS=true