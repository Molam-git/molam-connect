{
  "name": "@molam/brique-98",
  "version": "1.0.0",
  "description": "Offline Fallback (QR / USSD) for Molam payment system when network is absent",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "author": "Molam Platform Team",
  "license": "PROPRIETARY",
  "keywords": [
    "molam",
    "offline",
    "payments",
    "qr",
    "ussd",
    "reconciliation",
    "sync"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/molam/molam-connect.git",
    "directory": "brique-98"
  },
  "scripts": {
    "dev": "tsx src/server.ts",
    "build": "tsc && rollup -c",
    "start": "node dist/server.js",
    "worker:reconciliation": "WORKER_MODE=once tsx src/offline/reconciliation-worker.ts",
    "worker:reconciliation:continuous": "WORKER_MODE=continuous tsx src/offline/reconciliation-worker.ts",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:integration": "jest --testMatch='**/*.integration.test.ts'",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "db:migrate": "psql -U molam -d molam_offline -f migrations/001_create_offline_schema.sql",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "crypto": "^1.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "@types/pg": "^8.10.9",
    "@types/react": "^18.2.47",
    "@types/react-dom": "^18.2.18",
    "@types/jest": "^29.5.11",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.5",
    "rollup": "^4.9.4",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-terser": "^7.0.2",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "prettier": "^3.1.1"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "files": [
    "dist",
    "migrations",
    "README.md",
    "LICENSE"
  ]
}
