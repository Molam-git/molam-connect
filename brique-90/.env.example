# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=molam_connect
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_POOL_MAX=20

# Server Configuration
PORT=3090
NODE_ENV=development

# Redis Configuration (for screening cache and queue)
REDIS_URL=redis://localhost:6379
REDIS_TTL_SECONDS=3600

# Screening Provider Credentials
OFAC_API_URL=https://api.treasury.gov/ofac
OFAC_API_KEY=your_ofac_api_key

WORLDCHECK_API_URL=https://api.refinitiv.com/worldcheck
WORLDCHECK_API_KEY=your_worldcheck_api_key
WORLDCHECK_API_SECRET=your_worldcheck_secret

EU_SANCTIONS_API_URL=https://webgate.ec.europa.eu/fsd/fsf
EU_SANCTIONS_API_KEY=your_eu_api_key

PEP_DATABASE_URL=https://api.pepdata.com
PEP_API_KEY=your_pep_api_key

# SIRA Integration
SIRA_API_URL=http://localhost:3001
SIRA_ENABLED=true
SIRA_AUTO_APPLY_THRESHOLD=0.95

# Ledger Integration (B88/B89)
LEDGER_API_URL=http://localhost:3088
PAYOUTS_API_URL=http://localhost:3089

# Molam ID
MOLAM_ID_URL=http://localhost:3000
MOLAM_ID_API_KEY=your_molam_id_key

# S3 Configuration (for evidence storage)
AWS_REGION=us-east-1
AWS_S3_BUCKET=molam-compliance-evidence
AWS_ACCESS_KEY_ID=your_aws_key
AWS_SECRET_ACCESS_KEY=your_aws_secret
AWS_KMS_KEY_ID=your_kms_key_id

# Encryption
ENCRYPTION_KEY=your_32_byte_encryption_key_here
ENCRYPTION_ALGORITHM=aes-256-gcm

# Worker Configuration
SCREENING_WORKER_POLL_MS=5000
SCREENING_BATCH_SIZE=50
SCREENING_TIMEOUT_MS=30000
AUTO_UNHOLD_POLL_MS=300000

# Compliance Rules
DEFAULT_KYC_REQUIRED_LEVEL=2
DEFAULT_SCREENING_THRESHOLD=2000
DEFAULT_HARD_HOLD_THRESHOLD=20000
DEFAULT_FREEZE_THRESHOLD=100000
DEFAULT_SLA_HOURS=24

# Multi-sig Configuration
CRITICAL_CASE_APPROVALS_REQUIRED=2
HIGH_CASE_APPROVALS_REQUIRED=1

# Feature Flags
ENABLE_AUTO_SCREENING=true
ENABLE_SIRA_AUTO_APPLY=false
ENABLE_AUTO_UNHOLD=true
ENABLE_SCREENING_CACHE=true

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=9090
LOG_LEVEL=info

# Webhook Configuration
WEBHOOK_ENABLED=true
WEBHOOK_BASE_URL=http://localhost:3000/webhooks
