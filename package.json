{
  "name": "molam-connect",
  "version": "0.1.0",
  "description": "Molam Connect - Unified Payment Infrastructure for Africa",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "db:setup": "psql -U postgres -f database/setup.sql",
    "db:create": "psql -U postgres -c \"CREATE DATABASE molam_connect;\"",
    "db:drop": "psql -U postgres -c \"DROP DATABASE IF EXISTS molam_connect;\"",
    "db:reset": "npm run db:drop && npm run db:create && npm run db:setup",
    "test": "echo \"Running tests...\" && node test/run-tests.js",
    "test:api": "node test/test-api.js",
    "test:sdk": "node test/test-sdk.js",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.{js,json,md}\""
  },
  "keywords": [
    "payment",
    "africa",
    "fintech",
    "3ds",
    "otp",
    "mobile-money",
    "molam"
  ],
  "author": "Molam Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "dotenv": "^16.3.1",
    "pg": "^8.11.3",
    "ioredis": "^5.3.2",
    "argon2": "^0.31.2",
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "express-rate-limit": "^7.1.5",
    "uuid": "^9.0.1",
    "zod": "^3.22.4",
    "jsonwebtoken": "^9.0.2",
    "twilio": "^4.19.3",
    "node-cron": "^3.0.3",
    "winston": "^3.11.0",
    "prom-client": "^15.1.0",
    "qrcode": "^1.5.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
