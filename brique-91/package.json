{
  "name": "@molam/brique-91",
  "version": "1.0.0",
  "description": "Statement Ingestion, Reconciliation & Treasury Operations",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "node dist/index.js",
    "worker:ingest": "ts-node src/workers/statement-ingest.ts",
    "worker:recon": "ts-node src/workers/reconciliation-worker.ts",
    "worker:sweep": "ts-node src/workers/sweep-worker.ts",
    "worker:plan-exec": "ts-node src/workers/plan-executor-worker.ts",
    "worker:sla": "ts-node src/workers/sla-monitor-worker.ts",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "treasury",
    "reconciliation",
    "statement-ingestion",
    "fx",
    "fintech"
  ],
  "author": "Molam",
  "license": "PROPRIETARY",
  "dependencies": {
    "pg": "^8.11.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "uuid": "^9.0.1",
    "axios": "^1.6.5"
  },
  "devDependencies": {
    "@types/node": "^20.10.7",
    "@types/express": "^4.17.21",
    "@types/pg": "^8.10.9",
    "@types/cors": "^2.8.17",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/uuid": "^9.0.7",
    "@types/jest": "^29.5.11",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "prettier": "^3.1.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
