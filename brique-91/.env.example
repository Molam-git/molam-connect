# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=molam_connect
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_POOL_MAX=20

# Server Configuration
PORT=3000
NODE_ENV=development

# Worker Configuration
INGEST_POLL_MS=5000
RECON_POLL_MS=10000
RECON_BATCH_SIZE=50
SWEEP_POLL_MS=300000
SNAPSHOT_INTERVAL_MS=600000
PLAN_EXEC_POLL_MS=30000
SLA_MONITOR_POLL_MS=3600000

# Storage Configuration
STORAGE_TYPE=local
S3_BUCKET=molam-statements
S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# FX Provider Configuration (Production)
CURRENCYCLOUD_API_KEY=
CURRENCYCLOUD_API_URL=https://api.currencycloud.com/v2
WISE_API_KEY=
WISE_API_URL=https://api.transferwise.com
XE_API_KEY=
XE_API_URL=https://xecdapi.xe.com/v1

# Authentication
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=24h

# Monitoring & Alerting
PROMETHEUS_PORT=9090
ALERT_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
PAGERDUTY_API_KEY=

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Feature Flags
ENABLE_AUTO_SWEEP=true
ENABLE_FUZZY_MATCHING=true
ENABLE_SLA_ALERTS=true
