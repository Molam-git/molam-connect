# Database
DATABASE_URL=postgresql://user:password@localhost:5432/molam_devconsole
DB_POOL_MAX=20

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Server
PORT=3073
NODE_ENV=development

# Metrics
METRICS_PORT=9073

# Secrets & Encryption
VAULT_URL=http://localhost:8200
VAULT_TOKEN=your-vault-token
ENCRYPTION_KEY=your-32-byte-encryption-key-here

# API Key Settings
API_KEY_SECRET_LENGTH=48
API_KEY_DEFAULT_EXPIRY_DAYS=365
API_KEY_HASH_ROUNDS=12

# Rate Limiting
RATE_LIMIT_DEFAULT_PER_MINUTE=60
RATE_LIMIT_DEFAULT_PER_HOUR=1000
RATE_LIMIT_DEFAULT_PER_DAY=10000
RATE_LIMIT_BURST_MULTIPLIER=1.5

# Quotas
QUOTA_FREE_TIER_DAILY=1000
QUOTA_STARTER_TIER_DAILY=10000
QUOTA_GROWTH_TIER_DAILY=100000
QUOTA_ENTERPRISE_TIER_DAILY=1000000

# Webhooks
WEBHOOK_TIMEOUT_MS=5000
WEBHOOK_MAX_RETRIES=3
WEBHOOK_RETRY_DELAY_MS=1000

# Sandbox
SANDBOX_DATA_RETENTION_DAYS=30
SANDBOX_AUTO_CLEANUP=true

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:3073
JWT_SECRET=your-jwt-secret-for-dev-console
SESSION_SECRET=your-session-secret

# Molam ID Integration
MOLAM_ID_URL=https://id.molam.com
MOLAM_ID_PUBLIC_KEY_URL=https://id.molam.com/.well-known/jwks.json

# Billing Integration
BILLING_SERVICE_URL=http://localhost:3080
BILLING_API_KEY=your-billing-api-key

# Monitoring
ENABLE_REQUEST_LOGGING=true
LOG_RETENTION_DAYS=90
ENABLE_SIRA_RECOMMENDATIONS=true

# Features
ENABLE_LIVE_KEYS=false
ENABLE_PLAYGROUND=true
ENABLE_WEBHOOK_TESTER=true
