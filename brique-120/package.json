{
  "name": "@molam/brique-120",
  "version": "1.0.0",
  "description": "Payouts Engine & Scheduling - Industrial-grade payout disbursement system",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/server.ts",
    "start": "node dist/server.js",
    "test": "jest --detectOpenHandles --forceExit",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prisma:generate": "prisma generate",
    "db:migrate": "psql -U postgres -d molam_connect -f migrations/001_payouts_engine.sql",
    "db:migrate:marketplace": "psql -U postgres -d molam_connect -f migrations/002_marketplace_sellers.sql",
    "db:migrate:smart": "psql -U postgres -d molam_connect -f migrations/003_smart_marketplace.sql",
    "settlement": "ts-node src/workers/marketplace-settlement.ts",
    "slice-executor": "ts-node src/workers/payout-slice-executor.ts"
  },
  "keywords": [
    "molam",
    "payouts",
    "disbursement",
    "treasury",
    "batch",
    "scheduling",
    "fintech"
  ],
  "author": "Molam Team",
  "license": "UNLICENSED",
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "@prisma/client": "^5.9.0",
    "dotenv": "^16.4.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.5",
    "@types/pg": "^8.10.9",
    "prisma": "^5.9.0",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11",
    "supertest": "^6.3.3",
    "@types/supertest": "^6.0.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 75,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
